<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="AudioSpectrumPlayer.Views.VolumeControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="mainGrid" Padding="8,4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Volume Icon -->
        <FontIcon Grid.Column="0" 
                 Glyph="&#xE767;" 
                 FontFamily="Segoe MDL2 Assets"
                 VerticalAlignment="Center"
                 Margin="0,0,8,0"/>

        <!-- Volume Triangle -->
        <Canvas Grid.Column="1" 
                x:Name="volumeCanvas" 
                Height="32" 
                Width="180"
                Background="Transparent"
                PointerPressed="VolumeCanvas_PointerPressed"
                PointerMoved="VolumeCanvas_PointerMoved"
                PointerReleased="VolumeCanvas_PointerReleased"
                PointerEntered="VolumeCanvas_PointerEntered"
                PointerExited="VolumeCanvas_PointerExited">

            <!-- Background triangle (full volume shape) -->
            <Polygon x:Name="volumeBackground"
                     Fill="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"
                     Opacity="0.3"/>

            <!-- Current volume triangle -->
            <Polygon x:Name="volumeIndicator"
                     Fill="{ThemeResource SystemControlHighlightAccentBrush}"/>
        </Canvas>

        <!-- Volume Percentage -->
        <TextBlock Grid.Column="2"
                   x:Name="volumePercentage"
                   Text="{x:Bind GetVolumeText(ViewModel.Volume), Mode=OneWay}"
                   VerticalAlignment="Center"
                   Margin="8,0,0,0"
                   MinWidth="30"/>
    </Grid>
</UserControl>
