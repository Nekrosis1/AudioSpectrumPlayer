<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="AudioSpectrumPlayer.Views.SpectrumControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AudioSpectrumPlayer.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="Black">
        <Canvas x:Name="spectrumCanvas" 
                Background="Transparent"
                SizeChanged="SpectrumCanvas_SizeChanged">

            <!-- Filled area under the spectrum curve -->
            <Polygon x:Name="spectrumFill"
                     Fill="LimeGreen"
                     Opacity="0.3"
                     Stroke="Transparent"/>

            <!-- Spectrum curve line -->
            <Polyline x:Name="spectrumLine"
                      Stroke="LimeGreen"
                      StrokeThickness="2"
                      StrokeLineJoin="Round"/>

            <!-- Frequency labels (optional) -->
            <!--<TextBlock x:Name="lowFreqLabel" 
                       Text="20Hz" 
                       Foreground="White" 
                       FontSize="10"
                       Canvas.Left="5"
                       Canvas.Bottom="5"/>

            <TextBlock x:Name="highFreqLabel" 
                       Text="20kHz" 
                       Foreground="White" 
                       FontSize="10"
                       Canvas.Right="5"
                       Canvas.Bottom="5"/>-->
        </Canvas>
    </Grid>
</Page>
