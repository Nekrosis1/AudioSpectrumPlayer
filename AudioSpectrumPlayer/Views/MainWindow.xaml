<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="AudioSpectrumPlayer.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AudioSpectrumPlayer.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="{x:Bind ViewModel.WindowTitle, Mode=OneWay}">

    <Grid Padding="12,0,12,12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />

        </Grid.RowDefinitions>

        <!-- MenuBar -->
        <local:MenuBarControl Grid.Row="0" 
                          DataContext="{x:Bind ViewModel}"/>

        <!-- This will be where we show audio visualization later -->
        <Border x:Name="VisualizationBorder"
        Grid.Row="1" 
        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" 
        BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"
        BorderThickness="1"
        Margin="0,0,0,12">
            <local:SpectrumControl x:Name="SpectrumVisualization" />
        </Border>
        <!-- Progress Bar -->
        <Grid Grid.Row="2" Margin="0,0,0,12">
            <local:PlaybackProgressControl x:Name="PlaybackProgress"
                DataContext="{x:Bind ViewModel}"/>
        </Grid>


        <!-- Audio Controls -->
        <Grid Grid.Row="3" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Spacing="8">
                <Button x:Name="PlayPauseButton" 
                    Click="PlayPauseButton_Click">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Key="Space"/>
                    </Button.KeyboardAccelerators>
                    <FontIcon x:Name="PlayPauseIcon" 
                    Glyph="&#xE768;"/>
                </Button>
                <Button x:Name="StopButton" 
                    Click="StopButton_Click">
                    <FontIcon Glyph="&#xE71A;"/>
                </Button>
                <Button x:Name="OpenFileButton" 
                    Click="OpenFileButton_Click">
                    <FontIcon Glyph="&#xE8E5;"/>
                </Button>
            </StackPanel>
            <!-- Volume Controls -->
            <local:VolumeControl Grid.Column="1"
                         x:Name="VolumeControl"
                         DataContext="{x:Bind ViewModel}"
                         HorizontalAlignment="Right"
                         Width="240" />
        </Grid>

        <Border Grid.Row="4"
                Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"
                Height="150"
                Visibility="{x:Bind ConvertBoolToVisibility(ViewModel.IsLogVisible), Mode=OneWay}"
                BorderThickness="1">
            <local:LogDisplay x:Name="LogDisplay" />
        </Border>
    </Grid>
</Window>
