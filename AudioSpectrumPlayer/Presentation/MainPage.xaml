<Page x:Class="AudioSpectrumPlayer.Presentation.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:utu="using:Uno.Toolkit.UI"
      NavigationCacheMode="Required"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid utu:SafeArea.Insets="VisibleBounds" Padding="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>

        <!-- Audio Visualization Placeholder -->
        <Border Grid.Row="0" 
            Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" 
            BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"
            BorderThickness="1"
            Margin="0,0,0,12">
            <TextBlock HorizontalAlignment="Center" 
                 VerticalAlignment="Center" 
                 Text="Audio Visualization Area (Uno Platform)" />
        </Border>

        <!-- Progress Bar Placeholder -->
        <Border Grid.Row="1" 
            Background="LightGray" 
            Height="50" 
            Margin="0,0,0,12">
            <TextBlock HorizontalAlignment="Center" 
                 VerticalAlignment="Center" 
                 Text="Progress Control (TODO)" />
        </Border>

        <!-- Audio Controls -->
        <Grid Grid.Row="2" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" 
                  Orientation="Horizontal" 
                  HorizontalAlignment="Center"
                  Spacing="8">
                <Button Content="▶" Click="PlayButton_Click"/>
                <Button Content="⏸" Click="PauseButton_Click"/>
                <Button Content="⏹" Click="StopButton_Click"/>
                <Button Content="📁" Click="OpenFileButton_Click"/>
                <Button Content="Clear Log" Click="ClearLogButton_Click"/>
            </StackPanel>

            <!-- Volume Control Placeholder -->
            <Border Grid.Column="1"
              Background="LightBlue" 
              Width="240" 
              Height="40"
              HorizontalAlignment="Right">
                <TextBlock HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Text="Volume Control (TODO)" />
            </Border>
        </Grid>

        <!-- Log Display Placeholder -->
        <Border Grid.Row="3"
            Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
            BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"
            BorderThickness="1">
            <TextBlock HorizontalAlignment="Center" 
                 VerticalAlignment="Center" 
                 Text="Log Display (TODO)" />
        </Border>
    </Grid>
</Page>
